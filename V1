import tkinter
from tkinter import *
from PIL import ImageTk, Image
import random

window1 = Tk()
window1.title("Instructions Page")
window1.geometry('800x250')

instructionsHeading = tkinter.Label(window1,text="Following are the instructions for this game:",font=("Arial Bold",20))
instructionsHeading.grid(column=0,row=0)
instruction1 = tkinter.Label(window1,text="1: Press 'OK' once you have read all instructions",font=("Arial Bold",10))
instruction1.grid(column=0,row=1)
instruction2 = tkinter.Label(window1,text="2: You will need to input your username after pressing 'OK'",font=("Arial Bold",10))
instruction2.grid(column=0,row=2)
instruction3 = tkinter.Label(window1,text="3: You need to select your level of difficulty by clicking on either one of 3 buttons",font=("Arial Bold",10))
instruction3.grid(column=0,row=3)
instruction4 = tkinter.Label(window1,text="4: When the game starts you will need to input the correct answer for each question inside the entry box and press enter",font=("Arial Bold",10))
instruction4.grid(column=0,row=4)
instruction5 = tkinter.Label(window1,text="5: You can choose to end the game by clicking on the exit button on the top of the screen",font=("Arial Bold",10))
instruction5.grid(column=0,row=5)

okButton = Button(window1,text="OK",height= 1,font=("Arial Bold",30),width=5,command=window1.destroy).grid(column=0,row=6)

window1.mainloop()

window2 = Tk()
window2.title("Home Page")
window2.geometry('350x250')

username = tkinter.Label(window2,text="Pick your username",font=("Arial Bold",10))
username.grid(column=1,row=0)

level = tkinter.Label(window2,text="Pick your level",font=("Arial Bold",10))
level.grid(column=1,row=2)

name_entry = tkinter.Entry(window2,width=10)
name_entry.grid(column=1, row=1)

beginner = Button(window2,text="Beginner").grid(column=0,row=4)
intermediate = Button(window2,text="Intermediate").grid(column=1,row=4)
hard = Button(window2,text="Hard").grid(column=2,row=4)

beginner_image = Image.open("jerry copy.png")
resized_1 = beginner_image.resize((100, 120))
image_1 = ImageTk.PhotoImage(resized_1)
image1_label = Label(window2, image=image_1)
image1_label.grid(column=0,row=6)

intermediate_image = Image.open("jerry 2.png")
resized_2 = intermediate_image.resize((100, 120))
image_2 = ImageTk.PhotoImage(resized_2)
image2_label = Label(window2, image=image_2)
image2_label.grid(column=1,row=6)

hard_image = Image.open("jerry3.png")
resized_3 = hard_image.resize((100, 120))
image_3 = ImageTk.PhotoImage(resized_3)
image3_label = Label(window2, image=image_3)
image3_label.grid(column=2,row=6)

window2.mainloop()

window3 = Tk()
window3.title("Easy mode")
window3.geometry('350x250')

class easy_mode:
    def __init__(self, master):
        self.score = 0
        self.create_question()

        self.question_label = tkinter.Label(window3, text = "")
        self.question_label.grid(column=1, row=1)

        self.answer_input = tkinter.Entry(window3)
        self.answer_input.grid(column=1, row=2)

        self.enter_button = tkinter.Button(window3, text = "Enter", command = self.examine_answer)
        self.enter_button.grid(column=1, row=3)

        self.score_label = tkinter.Label(window3, text = f"Score: {self.score}")
        self.score_label.grid(column=1, row=0)

        self.stop_button = tkinter.Button(window3, text = "Exit", command = quit)
        self.stop_button.grid(column=2, row=0)

        self.restart_button = tkinter.Button(window3, text="Restart", command=self.restart_game)
        self.restart_button.grid(column=0, row=0)

        self.new_question_label()

    def create_question(self):
        self.num1=random.randint(10,20)
        self.num2=random.randint(1,10)
        self.sign=random.choice(['+', '-', '*'])
        if self.sign == '+':
            self.answer = self.num1 + self.num2
        elif self.sign == '-':
            self.answer = self.num1 - self.num2
        elif self.sign == '*':
            self.answer = self.num1 * self.num2

    def new_question_label(self):
        self.question_label .config(text=f"{self.num1} {self.sign} {self.num2} = ")

    def examine_answer(self):
        try:
            user_input = int(self.answer_input.get())
            if user_input == self.answer:
                self.score += 1
                correct_answer = tkinter.Label(window3, text = "Correct answer!!! :)")
                correct_answer.grid(column=1, row=4)
            else:
                wrong_answer = tkinter.Label(window3, text = "Wrong answer :(")
                wrong_answer.grid(column=1, row=4)

            self.score_label.config(text = f"Score: {self.score}")
            self.answer_input.delete(0, tkinter.END)
            self.create_question()
            self.new_question_label()
        except ValueError:
            invalid_answer = tkinter.Label(window3, text = "Enter a number only")
            invalid_answer.grid(column=1, row=4)                                     

    def quit():
        window3.destroy()

    def restart_game(self):
        self.score = 0
        self.score_label.config(text=f"Score: {self.score}")
        self.answer_input.delete(0, tkinter.END)
        self.create_question()
        self.new_question_label()
        game_restarted = tkinter.Label(window3, text = "The game has restarted")
        game_restarted.grid(column=1, row=4)

quiz = easy_mode(window3)
window3.mainloop
